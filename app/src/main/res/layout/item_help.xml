<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent">

    <ImageView 
        android:id="@+id/image_movie" 
        android:background="@drawable/rounded" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent" 
        android:layout_marginTop="24dp" 
        android:layout_marginBottom="16dp" 
        android:scaleType="fitXY" 
        android:contentDescription="@string/slide" 
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView 
        android:id="@+id/imageView" 
        android:background="@drawable/rounded_white" 
        android:layout_width="60dp" 
        android:layout_height="60dp" 
        android:contentDescription="@string/bcknumber" 
        app:layout_constraintEnd_toEndOf="@+id/image_movie" 
        app:layout_constraintStart_toStartOf="@+id/image_movie" 
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView 
        android:textSize="32sp" 
        android:id="@+id/number" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="@string/number" 
        app:layout_constraintBottom_toBottomOf="@+id/imageView" 
        app:layout_constraintEnd_toEndOf="@+id/imageView" 
        app:layout_constraintStart_toStartOf="@+id/imageView" 
        app:layout_constraintTop_toTopOf="@+id/imageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
