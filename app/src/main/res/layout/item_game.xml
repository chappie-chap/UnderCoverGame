<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" 
    android:layout_gravity="center" 
    android:id="@+id/item_game" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout 
        android:layout_width="120dp" 
        android:layout_height="190dp">

        <ImageView 
            android:id="@+id/bgGrid" 
            android:layout_width="match_parent" 
            android:layout_height="match_parent" 
            android:scaleType="fitXY"/>

        <ImageView 
            android:id="@+id/imgGrid" 
            android:layout_width="70dp" 
            android:layout_height="90dp" 
            android:layout_marginTop="30dp" 
            android:scaleType="fitXY" 
            app:layout_constraintEnd_toEndOf="@+id/bgGrid" 
            app:layout_constraintStart_toStartOf="@+id/bgGrid" 
            app:layout_constraintTop_toTopOf="@+id/bgGrid"/>

        <de.hdodenhof.circleimageview.CircleImageView 
            android:id="@+id/crcGrid" 
            android:layout_width="90dp" 
            android:layout_height="90dp" 
            android:layout_marginTop="30dp" 
            app:layout_constraintEnd_toEndOf="@+id/bgGrid" 
            app:layout_constraintStart_toStartOf="@+id/bgGrid" 
            app:layout_constraintTop_toTopOf="@+id/bgGrid"/>

        <TextView 
            android:textSize="20sp" 
            android:id="@+id/titleGrid" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="8dp" 
            android:text="@string/title" 
            android:fontFamily="@font/arlrdbd" 
            app:layout_constraintEnd_toEndOf="@+id/bgGrid" 
            app:layout_constraintStart_toStartOf="@+id/bgGrid" 
            app:layout_constraintTop_toBottomOf="@+id/crcGrid"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
