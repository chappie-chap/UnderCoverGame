<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@drawable/bg2"
    android:padding="16dp"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tbl_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/infotbl"
                android:scaleType="fitXY"
                android:src="@drawable/table" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/tujuan"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.0">

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:id="@+id/info_tvTujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arlrdbd"
                    android:textSize="12sp" />
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/tbl_info_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/deskripsi"
                android:scaleType="fitXY"
                android:src="@drawable/table" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/bg_putih"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tbl_info_desc"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/name_owner"
                android:textSize="@dimen/txt_info"
                app:layout_constraintStart_toStartOf="@+id/tbl_info_desc"
                app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/tempat_tanggal_lahir"
                android:textSize="@dimen/txt_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/owner"
                app:layout_constraintTop_toBottomOf="@+id/owner" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/Jurusan"
                android:textSize="@dimen/txt_info"
                app:layout_constraintStart_toStartOf="@+id/tempatTanggal"
                app:layout_constraintTop_toBottomOf="@+id/tempatTanggal" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/kampus"
                android:textSize="@dimen/txt_info"
                app:layout_constraintStart_toStartOf="@+id/jurusan"
                app:layout_constraintTop_toBottomOf="@+id/jurusan" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/angkatan1"
                android:textSize="@dimen/txt_info"
                app:layout_constraintStart_toStartOf="@+id/univ"
                app:layout_constraintTop_toBottomOf="@+id/univ" />

            <TextView
                android:id="@+id/tempatTanggal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/ttl"
                android:textSize="@dimen/txt_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/jurusan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/jurusan"
                android:textSize="@dimen/txt_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/univ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/univ"
                android:textSize="@dimen/txt_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/angkatan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/angkatan"
                android:textSize="@dimen/txt_info"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/owner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/ownername"
                android:textSize="@dimen/txt_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/Imgroket"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:contentDescription="@string/roketimg"
                android:scaleType="fitXY"
                android:src="@drawable/roket"
                app:layout_constraintBottom_toTopOf="@+id/version"
                app:layout_constraintEnd_toEndOf="@+id/version"
                app:layout_constraintStart_toStartOf="@+id/version" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/arlrdbd"
                android:text="@string/version"
                android:textSize="@dimen/txt_info"
                app:layout_constraintBottom_toBottomOf="@+id/tbl_info_desc"
                app:layout_constraintEnd_toEndOf="@+id/tbl_info_desc" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</RelativeLayout>
