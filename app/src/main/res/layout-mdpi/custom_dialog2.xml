<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" 
    android:layout_gravity="center" 
    android:layout_width="wrap_content" 
    android:layout_height="500dp"
    app:cardCornerRadius="40dp">

    <View 
        android:layout_gravity="center" 
        android:layout_width="match_parent" 
        android:layout_height="0dp"/>

    <ImageView 
        android:id="@+id/imgBackground2" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:src="@drawable/table"
        android:scaleType="fitXY"/>

    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:layout_marginTop="50dp" 
        android:layout_marginBottom="50dp">

        <RelativeLayout 
            android:gravity="center" 
            android:orientation="vertical" 
            android:layout_width="match_parent" 
            android:layout_height="match_parent" 
            android:layout_weight="1.3">

            <ImageView 
                android:id="@+id/imgRole2" 
                android:layout_width="130dp" 
                android:layout_height="150dp"
                android:src="@drawable/astronot"
                android:scaleType="fitXY"/>

            <de.hdodenhof.circleimageview.CircleImageView 
                android:id="@+id/imgRole"
                android:layout_width="150dp" 
                android:layout_height="150dp"
                android:src="@drawable/logo3rev2"/>

        </RelativeLayout>

        <LinearLayout 
            android:gravity="center_horizontal" 
            android:orientation="vertical" 
            android:layout_width="match_parent" 
            android:layout_height="match_parent" 
            android:layout_weight="1">

            <LinearLayout 
                android:orientation="horizontal" 
                android:id="@+id/linearLayout5" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp">

                <TextView 
                    android:textSize="@dimen/txt_info"
                    android:id="@+id/tv_role" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Role" 
                    android:layout_weight="1" 
                    android:fontFamily="@font/arlrdbd"/>

                <TextView 
                    android:textSize="@dimen/txt_info"
                    android:id="@+id/tv_word" 
                    android:background="@color/colorWhite" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Word" 
                    android:layout_weight="1" 
                    android:fontFamily="@font/arlrdbd"/>

            </LinearLayout>

            <EditText 
                android:textSize="@dimen/txt_info"
                android:id="@+id/edt_Name" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" 
                android:hint="Player" 
                android:inputType="text" 
                android:fontFamily="@font/arlrdbd"/>

            <Button 
                android:id="@+id/btn_showRole" 
                android:background="@drawable/rounded_white" 
                android:padding="8dp" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginTop="24dp" 
                android:text="@string/tunjukkan_peran"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
