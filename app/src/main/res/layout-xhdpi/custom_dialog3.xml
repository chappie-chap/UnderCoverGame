<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" 
    android:layout_gravity="center" 
    android:layout_width="match_parent" 
    android:layout_height="500dp"
    app:cardCornerRadius="40dp">

    <View 
        android:layout_gravity="center" 
        android:layout_width="match_parent" 
        android:layout_height="0dp"/>

    <ImageView 
        android:id="@+id/imgBackgroundadapter" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:src="@drawable/table"
        android:scaleType="fitXY"/>

    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp">

        <LinearLayout 
            android:gravity="center_horizontal" 
            android:orientation="vertical" 
            android:layout_width="match_parent" 
            android:layout_height="match_parent" 
            android:layout_weight="1.3">

            <ImageView 
                android:id="@+id/imgRole3"
                android:adjustViewBounds="true"
                android:maxHeight="130dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/astronot"
                android:scaleType="fitXY"/>

            <TextView
                android:textSize="16sp"
                android:id="@+id/tvWinner"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:text="Alien Win"
                android:fontFamily="@font/arlrdbd"/>

        </LinearLayout>

        <LinearLayout 
            android:orientation="vertical" 
            android:layout_width="match_parent" 
            android:layout_height="match_parent" 
            android:layout_weight="1">

            <TextView 
                android:textSize="16sp"
                android:id="@+id/ranking" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:text="Ranking" 
                android:fontFamily="@font/arlrdbd"/>

            <androidx.recyclerview.widget.RecyclerView 
                android:id="@+id/rv_progress" 
                android:layout_width="match_parent" 
                android:layout_height="0dp" 
                android:layout_marginTop="8dp" 
                android:layout_weight="1"/>

            <LinearLayout 
                android:background="@android:color/transparent" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content">

                <Button 
                    android:id="@+id/btn_hukuman" 
                    android:background="@drawable/rounded_white" 
                    android:padding="16dp"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_margin="16dp"
                    android:text="hukuman"
                    android:layout_weight="1"/>

                <Button 
                    android:id="@+id/btn_kembali" 
                    android:background="@drawable/rounded_white" 
                    android:padding="16dp"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_margin="14dp"
                    android:text="main lagi" 
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
